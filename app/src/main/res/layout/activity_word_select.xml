<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WordSelectActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtWord"
        android:layout_alignParentTop="true"
        android:inputType="textCapCharacters"
        android:layout_alignRight="@+id/bSave"
        android:layout_alignEnd="@+id/bSave"
        android:hint="Word" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumCorrect"
        android:inputType="number"
        android:layout_below="@+id/txtWord"
        android:layout_alignRight="@+id/txtWord"
        android:layout_alignEnd="@+id/txtWord"
        android:hint="Correct Letters" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matches"
        android:id="@+id/cbMatches"
        android:layout_below="@+id/txtNumCorrect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:enabled="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:checked="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/bAdd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onAddClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/bDelete"
        android:layout_alignBottom="@+id/bAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:onClick="onDeleteClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/bSave"
        android:layout_alignBottom="@+id/bAdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="onSaveClick" />
</RelativeLayout>
